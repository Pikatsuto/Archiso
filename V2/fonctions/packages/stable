#####################################################################################################################
# Fonction pour les packages à intégrer #
#########################################
yay(){
rm -rf /tmp/yay;
runuser -l $USERNAME -c 'git clone https://aur.archlinux.org/yay.git /tmp/yay'
runuser -l $USERNAME -c 'cd /tmp/yay && makepkg -s'
mv /tmp/yay/*.zst $DIR/repo;
}
